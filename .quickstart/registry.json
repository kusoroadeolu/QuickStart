{
  "app_test" : {
    "image" : "python:3.11-slim",
    "container_name" : "lightweight-app-test",
    "command" : "sh -c \"pip install -r requirements-test.txt && pytest\"",
    "volumes" : [ ".:/usr/src/app" ],
    "working_dir" : "/usr/src/app",
    "depends_on" : [ "redis" ],
    "environment" : {
      "REDIS_HOST" : "redis",
      "REDIS_PORT" : 6379
    }
  }
}